{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",

  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/eslint.config.*",
      "!{projectRoot}/jest.config.*",
      "!{projectRoot}/src/test-setup.*"
    ],
    "sharedGlobals": []
  },

  "plugins": [
    {
      "plugin": "@nx/vite/plugin",
      "options": {
        "buildTargetName": "build",
        "serveTargetName": "dev",
        "previewTargetName": "preview",
        "testTargetName": "test"
      }
    },
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint"
      }
    },
    {
      "plugin": "@nx/playwright/plugin",
      "options": {
        "targetName": "e2e"
      }
    }
  ],

  "generators": {
    "@nx/react": {
      "application": {
        "bundler": "vite",
        "compiler": "swc",
        "style": "tailwind",
        "linter": "eslint",
        "routing": false,
        "unitTestRunner": "none",
        "e2eTestRunner": "none",
        "strict": true
      },
      "library": {
        "style": "tailwind",
        "linter": "eslint",
        "unitTestRunner": "none"
      },
      "component": {
        "style": "tailwind",
        "classComponent": false,
        "unitTestRunner": "none"
      }
    }
  },

  "cli": {
    "packageManager": "pnpm"
  }
}
