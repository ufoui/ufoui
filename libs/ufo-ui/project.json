{
  "name": "@ufoui/core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/ufo-ui/src",
  "projectType": "library",
  "tags": [],
  "// targets": "to see all targets run: nx show project ufo-ui --web",
  "targets": {
    "docs": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx typedoc --options libs/ufo-ui/typedoc.json"
      }
    },
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/ufo-ui",
        "configFile": "libs/ufo-ui/vite.config.ts"
      }
    },
    "analyze": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx run @ufoui/core:build --mode=analyze && start dist\\libs\\ufo-ui\\bundle-report.html"
      }
    }
  }
}
